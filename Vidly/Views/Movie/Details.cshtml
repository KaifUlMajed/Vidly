@model Vidly.Models.Movie

@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul class="list-group">
    <li class="list-group-item">Genre: @Model.Genre</li>
    <li class="list-group-item">Release Date: @Model.ReleaseDate.ToString("dddd, MMMM d, yyyy")</li>
    <li class="list-group-item">Date Added: @Model.DateAdded.ToString("dddd, MMMM d, yyyy")</li>
    <li class="list-group-item">Number in stock: @Model.NumberInStock</li>
</ul>

